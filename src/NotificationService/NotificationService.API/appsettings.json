{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:5000",
      "http://test.hcmiu.edu.vn"
    ]
  },
  "JWT": {
    "Key": "this_is_a_very_strong_and_long_jwt_secret_key_12345",
    "Issuer": "cis@hcmiu.edu.vn",
    "Audience": "unknown",
    "Lifetime": "180"
  },
  "ConnectionStrings": {
    "LocalEduDBConnection": "Data Source=TRONG-PC\\SQLEXPRESS;Initial Catalog=IUSys.NotiDb;Integrated Security=True;MultipleActiveResultSets=True;Encrypt=False;TrustServerCertificate=True",
    "ProductionEduDBConnection": "Server=10.8.52.222,1433;Database=IUSys.NotiDb;User ID=cis-admin;Password=C1S4dm1n;MultipleActiveResultSets=True;TrustServerCertificate=True;Encrypt=False"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "EduService": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "notification-service-log-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "NotificationService"
    }
  },
  "Consul": {
    "Address": "http://localhost:8500",
    "ServiceName": "notification-service",
    "ServicePort": 7009,
    "ServiceHost": "host.docker.internal"
  },
  "RabbitMQ": {
    // Local: NotificationService chạy trên host, RabbitMQ chạy docker
    "ConnectionString": "amqp://guest:guest@localhost:5672/",  
    "Exchange": "notifications.exchange"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "Sender": "noreply@hcmiu.edu.vn",
    "SenderName": "HCMIU Notification",
    "User": "your-email@gmail.com",
    "Password": "your-app-password",
    "UseSSL": false,
    "UseStartTls": true
  },
  "AllowedHosts": "*"
}
